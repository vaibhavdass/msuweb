<?xml version="1.0"?>
<config>
    <modules>
        <Naresh_Measurementremember>
            <version>0.1.0</version>
        </Naresh_Measurementremember>
    </modules>
    <frontend>
        <routers>
            <measurementremember>
                <use>standard</use>
                <args>
                    <module>Naresh_Measurementremember</module>
                    <frontName>measurementremember</frontName>
                </args>
            </measurementremember>
        </routers>
        <layout>
            <updates>
                <measurementremember>
                    <file>measurementremember.xml</file>
                </measurementremember>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<measurementremember>
				<use>admin</use>
				<args>
					<module>Naresh_Measurementremember</module>
					<frontName>measurementremember</frontName>
				</args>
			</measurementremember>
        </routers>
    </admin>
