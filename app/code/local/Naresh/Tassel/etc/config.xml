<?xml version="1.0"?>
<config>
    <modules>
        <Naresh_Tassel>
            <version>0.1.0</version>
        </Naresh_Tassel>
    </modules>
    <frontend>
        <routers>
            <tassel>
                <use>standard</use>
                <args>
                    <module>Naresh_Tassel</module>
                    <frontName>tassel</frontName>
                </args>
            </tassel>
        </routers>
        <layout>
            <updates>
                <tassel>
                    <file>tassel.xml</file>
                </tassel>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<tassel>
				<use>admin</use>
				<args>
					<module>Naresh_Tassel</module>
					<frontName>tassel</frontName>
				</args>
			</tassel>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<!-- <tassel module="tassel">
				<title>Tassel</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="tassel">
						<title>Manage Tassel</title>
						<sort_order>0</sort_order>
						<action>tassel/adminhtml_tassel</action>
					</items>
                    <list translate="list">
                        <title>Manage Tassel</title>
