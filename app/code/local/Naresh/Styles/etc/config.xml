<?xml version="1.0"?>
<config>
    <modules>
        <Naresh_Styles>
            <version>0.1.0</version>
        </Naresh_Styles>
    </modules>
    <frontend>
        <routers>
            <styles>
                <use>standard</use>
                <args>
                    <module>Naresh_Styles</module>
                    <frontName>styles</frontName>
                </args>
            </styles>
        </routers>
        <layout>
            <updates>
                <styles>
                    <file>styles.xml</file>
                </styles>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<styles>
				<use>admin</use>
				<args>
					<module>Naresh_Styles</module>
					<frontName>styles</frontName>
				</args>
			</styles>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<!-- <styles module="styles">
