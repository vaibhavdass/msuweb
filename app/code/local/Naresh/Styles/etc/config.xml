		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Naresh_Styles>
							<title>Styles Module</title>
							<sort_order>10</sort_order>
						</Naresh_Styles>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<styles>
					<file>styles.xml</file>
				</styles>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <styles>
                <class>Naresh_Styles_Model</class>
                <resourceModel>styles_mysql4</resourceModel>
            </styles>
            <styles_mysql4>
                <class>Naresh_Styles_Model_Mysql4</class>
                <entities>
                    <styles>
                        <table>measurement_front_styles</table>
                    </styles>
                </entities>
            </styles_mysql4>
        </models>
        <resources>
            <styles_setup>
                <setup>
                    <module>Naresh_Styles</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </styles_setup>
            <styles_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </styles_write>
            <styles_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </styles_read>
        </resources>
        <blocks>
            <styles>
                <class>Naresh_Styles_Block</class>
            </styles>
        </blocks>
        <helpers>
            <styles>
                <class>Naresh_Styles_Helper</class>
            </styles>
        </helpers>
    </global>
</config>