    <global>
        <models>
            <sleeves>
                <class>Naresh_Sleeves_Model</class>
                <resourceModel>sleeves_mysql4</resourceModel>
            </sleeves>
            <sleeves_mysql4>
                <class>Naresh_Sleeves_Model_Mysql4</class>
                <entities>
                    <sleeves>
                        <table>measurement_sleeve_styles</table>
                    </sleeves>
                </entities>
            </sleeves_mysql4>
        </models>
        <resources>
            <sleeves_setup>
                <setup>
                    <module>Naresh_Sleeves</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sleeves_setup>
            <sleeves_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sleeves_write>
            <sleeves_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sleeves_read>
        </resources>
        <blocks>
            <sleeves>
                <class>Naresh_Sleeves_Block</class>
            </sleeves>
        </blocks>
        <helpers>
            <sleeves>
                <class>Naresh_Sleeves_Helper</class>
            </sleeves>
        </helpers>
    </global>
</config>