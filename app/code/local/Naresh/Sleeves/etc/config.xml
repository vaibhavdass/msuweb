<?xml version="1.0"?>
<config>
    <modules>
        <Naresh_Sleeves>
            <version>0.1.0</version>
        </Naresh_Sleeves>
    </modules>
    <frontend>
        <routers>
            <sleeves>
                <use>standard</use>
                <args>
                    <module>Naresh_Sleeves</module>
                    <frontName>sleeves</frontName>
                </args>
            </sleeves>
        </routers>
        <layout>
            <updates>
                <sleeves>
                    <file>sleeves.xml</file>
                </sleeves>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<sleeves>
				<use>admin</use>
				<args>
					<module>Naresh_Sleeves</module>
					<frontName>sleeves</frontName>
				</args>
			</sleeves>
        </routers>
    </admin>
