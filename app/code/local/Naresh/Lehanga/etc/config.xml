<?xml version="1.0"?>
<config>
    <modules>
        <Naresh_Lehanga>
            <version>0.1.0</version>
        </Naresh_Lehanga>
    </modules>
    <frontend>
        <routers>
            <lehanga>
                <use>standard</use>
                <args>
                    <module>Naresh_Lehanga</module>
                    <frontName>lehanga</frontName>
                </args>
            </lehanga>
        </routers>
        <layout>
            <updates>
                <lehanga>
                    <file>lehanga.xml</file>
                </lehanga>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<lehanga>
				<use>admin</use>
				<args>
					<module>Naresh_Lehanga</module>
					<frontName>lehanga</frontName>
				</args>
			</lehanga>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<!-- <lehanga module="lehanga">
