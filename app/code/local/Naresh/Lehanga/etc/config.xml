		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Naresh_Lehanga>
							<title>Lehanga Module</title>
							<sort_order>10</sort_order>
						</Naresh_Lehanga>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<lehanga>
					<file>lehanga.xml</file>
				</lehanga>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <lehanga>
                <class>Naresh_Lehanga_Model</class>
                <resourceModel>lehanga_mysql4</resourceModel>
            </lehanga>
            <lehanga_mysql4>
                <class>Naresh_Lehanga_Model_Mysql4</class>
                <entities>
                    <lehanga>
                        <table>measurement_lehanga_styles</table>
                    </lehanga>
                </entities>
            </lehanga_mysql4>
        </models>
        <resources>
            <lehanga_setup>
                <setup>
                    <module>Naresh_Lehanga</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lehanga_setup>
            <lehanga_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </lehanga_write>
            <lehanga_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </lehanga_read>
        </resources>
        <blocks>
            <lehanga>
                <class>Naresh_Lehanga_Block</class>
            </lehanga>
        </blocks>
        <helpers>
            <lehanga>
                <class>Naresh_Lehanga_Helper</class>
            </lehanga>
        </helpers>
    </global>
</config>