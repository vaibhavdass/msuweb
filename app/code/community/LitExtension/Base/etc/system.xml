<config>
    <tabs>
        <tabs>
            <litextension translate="label">
                <label>LitExtension</label>
                <sort_order>2000</sort_order>
            </litextension>
        </tabs>
    </tabs>

    <sections>
        <lebase>
            <label>General</label>
            <tab>litextension</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <installed translate="label">
                    <label>Installed Extensions</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <extensions>
                            <label>Installed Extensions</label>
                            <comment><![CDATA[]]></comment>
                            <frontend_type>text</frontend_type>
                            <frontend_model>lebase/system_config_form_fieldset_extensions</frontend_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </extensions>
                    </fields>
                </installed>
                <feed>
                    <label>Notifications</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <interests translate="label">
                            <label>I'd like to be informed by LitExtension about:</label>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                            <source_model>lebase/system_config_source_interests</source_model>
                        </interests>
                    </fields>
                </feed>
            </groups>
        </lebase>
        <lestore>
            <label>Store</label>
            <tab>litextension</tab>
            <frontend_type>text</frontend_type>
            <sort_order>9000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <extensions translate="label">
                    <label>LitExtension Store</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>lebase/system_config_form_fieldset_store</frontend_model>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </extensions>
            </groups>
        </lestore>
    </sections>
</config>